.Sidebar
  .Sidebar__username
    .topItems 
      %p.topItems__name 
        = current_user.name
      .topItems__list
        = link_to new_group_path, class: "topItems__list__icon" do
          = icon('fas', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: "topItems__list__icon" do
          = icon('fas', 'cog')
  .Sidebar__grouplists
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "groupList" do
          .groupList__name
            = group.title  
          .groupList__message
            = group.show_last_message